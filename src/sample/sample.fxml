<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.effect.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <top>
       <VBox BorderPane.alignment="CENTER">
          <children>
              <MenuBar>
                 <menus>
                     <Menu mnemonicParsing="false" text="File">
                        <items>
                            <MenuItem fx:id="" mnemonicParsing="false" onAction="#closeButtonClicked" text="Close" />
                        </items>
                     </Menu>
                     <Menu mnemonicParsing="false" text="Make This Server">
                        <items>
                            <MenuItem mnemonicParsing="false" onAction="#startServer" text="Start Server" />
                        </items>
                     </Menu>
                     <Menu mnemonicParsing="false" text="Help">
                        <items>
                            <MenuItem mnemonicParsing="false" text="About" />
                        </items>
                     </Menu>
                 </menus>
              </MenuBar>
              <HBox spacing="10.0">
                  <VBox.margin>
                      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                  </VBox.margin>
                 <children>
                     <TextField fx:id="userName" promptText="username">
                         <HBox.margin>
                             <Insets />
                         </HBox.margin>
                     </TextField>
                     <TextField fx:id="ip" layoutX="191.0" layoutY="10.0" promptText="ip address" />
                     <TextField fx:id="port" layoutX="10.0" layoutY="10.0" promptText="port" />
                     <Button mnemonicParsing="false" onAction="#loginButtonClicked" prefHeight="25.0" prefWidth="72.0" text="Log In" />
                 </children>
              </HBox>
          </children>
       </VBox>
   </top>
   <bottom>
       <HBox BorderPane.alignment="CENTER">
           <padding>
               <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
           </padding>
          <children>
              <Label fx:id="bottomLabel" text="Not Connected To any Server" />
          </children>
       </HBox>
   </bottom>
   <center>
       <VBox BorderPane.alignment="CENTER">
          <children>
              <TextArea fx:id="chatBox" editable="false" prefHeight="205.0" prefWidth="447.0">
                 <VBox.margin>
                     <Insets bottom="5.0" left="5.0" right="5.0" />
                 </VBox.margin>
              </TextArea>
              <HBox prefHeight="100.0" prefWidth="200.0">
                 <children>
                     <TextArea fx:id="messages" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                         <HBox.margin>
                             <Insets left="5.0" right="5.0" top="5.0" />
                         </HBox.margin>
                     </TextArea>
                     <VBox prefHeight="200.0" prefWidth="100.0">
                        <children>
                            <Region prefHeight="200.0" prefWidth="200.0" />
                            <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#sendButtonClicked" prefHeight="25.0" prefWidth="85.0" text="Send">
                                <VBox.margin>
                                    <Insets left="10.0" right="10.0" top="10.0" />
                                </VBox.margin>
                            </Button>
                        </children>
                     </VBox>
                 </children>
              </HBox>
          </children>
       </VBox>
   </center>
   <left>
       <VBox BorderPane.alignment="CENTER">
          <children>
              <Label contentDisplay="CENTER" prefHeight="20.0" prefWidth="143.0" text="Users" textAlignment="CENTER">
                 <effect>
                     <Reflection />
                 </effect>
                 <padding>
                     <Insets bottom="5.0" left="5.0" />
                 </padding>
                 <VBox.margin>
                     <Insets />
                 </VBox.margin>
              </Label>
              <ListView prefHeight="295.0" prefWidth="130.0" />
          </children>
       </VBox>
   </left>
</BorderPane>
